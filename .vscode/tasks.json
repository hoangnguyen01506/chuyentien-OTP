{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "Build Project with MSYS2 + lib_curl",
      "command": "C:/msys64/ucrt64/bin/g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-std=c++17",

        // Include directories
        "-I", "${workspaceFolder}/include",
        "-I", "${workspaceFolder}/otp",
        "-I", "${workspaceFolder}/curl-8.13.0_3-win64-mingw/curl-8.13.0_3-win64-mingw/include",

        // Source files
        "${workspaceFolder}/src/main.cpp",
        "${workspaceFolder}/src/user.cpp",
        "${workspaceFolder}/src/ui.cpp",
        "${workspaceFolder}/src/Database.cpp",
        "${workspaceFolder}/otp/otp.cpp",

        // Library path and libraries
        "-L", "${workspaceFolder}/curl-8.13.0_3-win64-mingw/curl-8.13.0_3-win64-mingw/lib",
        "-lcurl",
        "-lws2_32",
        "-lssl",
        "-lcrypto",
        "-lz",
        "-lsqlite3",

        // Output
        "-o", "${workspaceFolder}/app.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
